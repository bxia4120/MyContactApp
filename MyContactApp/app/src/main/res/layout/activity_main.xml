<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xiab7798.mycontactapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textStyle="normal"
        android:typeface="normal"
        android:textIsSelectable="false"
        android:textSize="24dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AddData"
        android:id="@+id/button_add"
        android:layout_marginBottom="46dp"
        android:onClick="addData"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editName"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/editEmail"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:id="@+id/textView2"
        android:textStyle="normal"
        android:typeface="normal"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editAge"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/editName"
        android:layout_alignStart="@+id/editName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:id="@+id/textView3"
        android:typeface="normal"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editAge"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editEmail"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/button_add"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE"
        android:id="@+id/textView4"
        android:typeface="normal"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPhone"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/editEmail"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACTS"
        android:id="@+id/button"
        android:onClick="viewData"
        android:layout_alignTop="@+id/button_add"
        android:layout_alignParentStart="true" />

</RelativeLayout>
